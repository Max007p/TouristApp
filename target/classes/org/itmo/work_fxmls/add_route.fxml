<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="480.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.itmo.controllers.AddRoute">
    <children>
        <Separator layoutX="20.0" layoutY="50.0" prefHeight="20.0" prefWidth="600.0" />
        <Label layoutX="182.0" layoutY="26.0" text="Регистрация нового маршрута">
            <font>
                <Font name="Arial Black" size="16.0" />
            </font>
        </Label>
        <HBox layoutX="20.0" layoutY="93.0" prefHeight="295.0" prefWidth="548.0">
            <children>
                <VBox alignment="CENTER_RIGHT" prefHeight="350.0" prefWidth="213.0" spacing="35.0">
                    <children>
                        <Label text="Название:">
                            <font>
                                <Font name="Times New Roman" size="18.0" />
                            </font>
                        </Label>
                        <Label text="Точка старта:">
                            <font>
                                <Font name="Times New Roman" size="18.0" />
                            </font>
                        </Label>
                        <Label text="Точка финиша:">
                            <font>
                                <Font name="Times New Roman" size="18.0" />
                            </font>
                        </Label>
                        <Label text="Протяженность маршрута:">
                            <font>
                                <Font name="Times New Roman" size="18.0" />
                            </font>
                        </Label>
                    </children>
                    <opaqueInsets>
                        <Insets />
                    </opaqueInsets>
                    <HBox.margin>
                        <Insets right="50.0" />
                    </HBox.margin>
                </VBox>
                <VBox alignment="CENTER_LEFT" prefHeight="300.0" prefWidth="175.0" spacing="30.0">
                    <children>
                        <TextField fx:id="routeName" />
                        <ComboBox fx:id="startCity" prefWidth="150.0" />
                        <ComboBox fx:id="finishCity" prefWidth="150.0" />
                        <TextField fx:id="duration" />
                    </children>
                </VBox>
            </children>
        </HBox>
        <HBox alignment="CENTER" layoutX="270.0" layoutY="420.0" spacing="20.0">
            <children>
                <Button fx:id="addButton" mnemonicParsing="false" onAction="#addData" prefHeight="40.0" prefWidth="100.0" text="Добавить">
                    <font>
                        <Font name="Times New Roman" size="18.0" />
                    </font></Button>
            </children>
        </HBox>
    </children>
</AnchorPane>
